pipeline{
    agent any 
    stages{
        stage("sonar quality check"){
            agent{
                docker {
                    image 'openjdk:11'
                }
            }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar') {
                      sh 'chmod +x gradlw'
                      sh './gradlew sonarqube'
                                  }

                }
              
            }
            
        }
    }
    
}